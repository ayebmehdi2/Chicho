<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:background="@drawable/shidow_blue"
    android:layout_marginTop="10dp">



    <LinearLayout
        android:id="@+id/linearLayout"
        android:background="@drawable/shidow_white"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:padding="14dp"
                app:srcCompat="@drawable/icone" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/img"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:text="Mehdi" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="32dp"
                android:textSize="12sp"
                tools:text="9:00" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEE" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/textColor"
                android:textSize="20sp"
                android:visibility="gone"
                tools:text="HAHAHAHAAH ofkgpve eroooojn vzerpo,zopkv, zeopkfvz opvkopz !!!! HAHAHAHAAH ofkgpve eroooojn vzerpo,zopkv, zeopkfvz opvkopz !!!!" />

            <ImageView
                android:id="@+id/ci"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_weight="6"
                android:padding="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/d"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEE" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp">

            <ImageView
                android:id="@+id/like"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:padding="8dp"
                app:srcCompat="@drawable/ic_like1" />

            <TextView
                android:id="@+id/num_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@id/like"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="50" />

            <ImageView
                android:id="@+id/commnet"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/num_comment"
                android:padding="8dp"
                app:srcCompat="@drawable/ic_c1" />

            <TextView
                android:id="@+id/num_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="50" />
        </RelativeLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>