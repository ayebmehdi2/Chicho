<?xml version="1.0" encoding="utf-8"?>
<layout>
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <FrameLayout
            android:id="@+id/frag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <View
            android:id="@+id/header"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@color/colorPrimary"
            />

        <View
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            />
        <View
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            />
        <View
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/colorPrimary"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="26dp"
            android:textColor="#FAFAFA"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Mehdi El Ayeb"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="55dp" />

        <ImageView
            android:id="@+id/acc"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginEnd="16dp"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_user_2" />

        <LinearLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="55dp"
            android:layout_height="55dp">

            <ImageView
                android:id="@+id/main"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="main"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:background="@drawable/show"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_happy"/>

            <ImageView
                android:id="@+id/sear"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:onClick="search"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:srcCompat="@drawable/top_2"/>


            <ImageView
                android:id="@+id/not"
                android:onClick="not"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_bell_2"/>

        </LinearLayout>


        <ImageView
            app:srcCompat="@drawable/ic_top_start"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="110dp"
            android:layout_marginStart="4dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <ImageView
            app:srcCompat="@drawable/ic_buttom_end"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="20dp"
            android:layout_margin="4dp"
            android:layout_height="20dp" />

        <ImageView
            app:srcCompat="@drawable/ic_buttom_start"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="20dp"
            android:layout_margin="4dp"
            android:layout_height="20dp" />

        <ImageView
            android:layout_marginTop="110dp"
            android:layout_marginEnd="4dp"
            app:srcCompat="@drawable/ic_top_end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="30dp"
            android:layout_height="30dp" />


    </android.support.constraint.ConstraintLayout>
</layout>