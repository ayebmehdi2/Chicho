<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="80dp"
        android:src="@drawable/d"
        android:padding="10dp"
        android:layout_height="match_parent"
        android:id="@+id/im"
        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="@id/im"
        app:layout_constraintStart_toStartOf="@id/im"
        app:srcCompat="@drawable/ic_top_start"/>
    <ImageView
        android:scaleType="centerCrop"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="@id/im"
        app:layout_constraintTop_toTopOf="@id/im"
        app:srcCompat="@drawable/ic_top_end"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="@id/im"
        app:layout_constraintStart_toStartOf="@id/im"
        app:srcCompat="@drawable/ic_buttom_start"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@id/im"
        app:layout_constraintEnd_toEndOf="@id/im"
        app:srcCompat="@drawable/ic_buttom_end"/>

    <TextView
        android:id="@+id/user_name"
        app:layout_constraintTop_toTopOf="@+id/im"
        app:layout_constraintStart_toEndOf="@id/im"
        app:layout_constraintBottom_toBottomOf="@id/im"
        android:text="Mehdi"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/ic_follower"
        android:padding="10dp"
        android:id="@+id/follow"
        android:layout_marginEnd="16dp"
        android:layout_width="50dp"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/msg_to_person"
        app:layout_constraintEnd_toStartOf="@id/follow"
        app:layout_constraintTop_toTopOf="@id/follow"
        app:srcCompat="@drawable/ic_messaging"
        android:padding="10dp"
        android:layout_width="50dp"
        android:layout_height="match_parent" />

</android.support.constraint.ConstraintLayout>